#Get Windows clipboard content and replace windows newline
function gwclip () {
  if test -t 0
  then
    echo $(powershell.exe -c '[Console]::Out.Write(([string]$(Get-Clipboard -Raw)).tostring().replace("`r", ""))')
  else
    clip.exe
  fi
}
export -f gwclip

